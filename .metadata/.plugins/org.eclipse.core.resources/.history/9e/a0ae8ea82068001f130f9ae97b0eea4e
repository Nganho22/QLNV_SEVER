package QLNVdbsAPI.model;

import org.springframework.data.mongodb.core.mapping.Document;
import org.springframework.data.mongodb.core.mapping.Field;
import org.springframework.data.annotation.Id;

@Document(collection = "Service")
public class Database {
    @Id
    private String _id;

    @Field("ServiceID")  // Ánh xạ trường "ServiceID" trong MongoDB đến thuộc tính này
    private String serviceID;

    @Field("ServiceName")  // Ánh xạ trường "ServiceName" trong MongoDB đến thuộc tính này
    private String serviceName;

    @Field("DatabaseType")  // Ánh xạ trường "DatabaseType" trong MongoDB đến thuộc tính này
    private String databaseType;

    @Field("DatabaseName")  // Ánh xạ trường "DatabaseName" trong MongoDB đến thuộc tính này
    private String databaseName;

    @Field("DatabasePort")  // Ánh xạ trường "DatabasePort" trong MongoDB đến thuộc tính này
    private String databasePort;

    @Field("Collection")  // Ánh xạ trường "Collection" trong MongoDB đến thuộc tính này
    private String collection;

    // Các phương thức getter và setter
    public String getServiceID() {
        return serviceID;
    }

    public void setServiceID(String serviceID) {
        this.serviceID = serviceID;
    }

    public String getServiceName() {
        return serviceName;
    }

    public void setServiceName(String serviceName) {
        this.serviceName = serviceName;
    }

    public String getDatabaseType() {
        return databaseType;
    }

    public void setDatabaseType(String databaseType) {
        this.databaseType = databaseType;
    }

    public String getDatabaseName() {
        return databaseName;
    }

    public void setDatabaseName(String databaseName) {
        this.databaseName = databaseName;
    }

    public String getDatabasePort() {
        return databasePort;
    }

    public void setDatabasePort(String databasePort) {
        this.databasePort = databasePort;
    }

    public String getCollection() {
        return collection;
    }

    public void setCollection(String collection) {
        this.collection = collection;
    }
}
